<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.rpuxa.bomjara">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".refactor.v.Bomjara"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data android:name="com.google.android.gms.ads.AD_MANAGER_APP" android:value="true"/>

        <activity
            android:name=".refactor.v.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".refactor.v.activities.SavesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".refactor.v.activities.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".refactor.v.activities.ContentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".refactor.v.activities.SettingsActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>